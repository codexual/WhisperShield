{
  "manifest_version": 3,
  "name": "WhisperShield",
  "version": "0.0.1",
  "description": "Twitch raid firewall (ASMR-focused) with whitelist/greylist/blacklist, remote lists, persistence, export/import, badge metrics.",
  "permissions": [
    "tabs",
    "storage",
    "identity"
  ],
  "host_permissions": [
    "https://*.twitch.tv/*",
    "https://api.twitch.tv/*",
    "https://id.twitch.tv/*",
    "https://raw.githubusercontent.com/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "WhisperShield",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "content_scripts": [
    {
      "matches": ["https://*.twitch.tv/*"],
      "js": ["content.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["https://www.twitch.tv/directory/category/asmr*"],
      "js": [
        "overlay_panel.js",
        "asmr-hide-module.js",
        "asmr-hide-counter.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["overlay_panel.css"],
      "matches": ["https://*.twitch.tv/*"]
    },
    {
      "resources": [
        "asmr-hide-module.js",
        "asmr-hide-counter.js"
      ],
      "matches": ["https://*.twitch.tv/*"]
    }
  ]
}
